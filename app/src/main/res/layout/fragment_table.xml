<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/input_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="8dp">

        <!-- Fila para centrar el 0 sobre las tres columnas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="8dp">
            <!-- Espacio del ancho del label -->
            <TextView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text=""
                android:background="@android:color/transparent" />
            <!-- Espacio izquierdo para centrar el 0 -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
            <!-- El 0 centrado -->
            <TextView
                android:id="@+id/tv0"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/grid_cell_background"
                android:textColor="@color/white" />
            <!-- Espacio derecho para centrar el 0 -->
            <View
                android:layout_width="40dp"
                android:layout_height="40dp" />
        </LinearLayout>

        <!-- Primer bloque: 1-12 con leyendas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="1-3" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv1" android:layout_width="40dp" android:layout_height="40dp" android:text="1" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv2" android:layout_width="40dp" android:layout_height="40dp" android:text="2" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv3" android:layout_width="40dp" android:layout_height="40dp" android:text="3" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="4-6" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv4" android:layout_width="40dp" android:layout_height="40dp" android:text="4" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv5" android:layout_width="40dp" android:layout_height="40dp" android:text="5" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv6" android:layout_width="40dp" android:layout_height="40dp" android:text="6" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="7-9" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv7" android:layout_width="40dp" android:layout_height="40dp" android:text="7" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv8" android:layout_width="40dp" android:layout_height="40dp" android:text="8" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv9" android:layout_width="40dp" android:layout_height="40dp" android:text="9" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="10-12" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv10" android:layout_width="40dp" android:layout_height="40dp" android:text="10" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv11" android:layout_width="40dp" android:layout_height="40dp" android:text="11" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv12" android:layout_width="40dp" android:layout_height="40dp" android:text="12" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Espacio entre bloques -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Segundo bloque: 13-24 con leyendas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="13-15" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv13" android:layout_width="40dp" android:layout_height="40dp" android:text="13" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv14" android:layout_width="40dp" android:layout_height="40dp" android:text="14" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv15" android:layout_width="40dp" android:layout_height="40dp" android:text="15" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="16-18" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv16" android:layout_width="40dp" android:layout_height="40dp" android:text="16" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv17" android:layout_width="40dp" android:layout_height="40dp" android:text="17" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv18" android:layout_width="40dp" android:layout_height="40dp" android:text="18" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="19-21" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv19" android:layout_width="40dp" android:layout_height="40dp" android:text="19" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv20" android:layout_width="40dp" android:layout_height="40dp" android:text="20" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv21" android:layout_width="40dp" android:layout_height="40dp" android:text="21" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="22-24" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv22" android:layout_width="40dp" android:layout_height="40dp" android:text="22" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv23" android:layout_width="40dp" android:layout_height="40dp" android:text="23" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv24" android:layout_width="40dp" android:layout_height="40dp" android:text="24" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Espacio entre bloques -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Tercer bloque: 25-36 con leyendas -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_horizontal">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="25-27" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv25" android:layout_width="40dp" android:layout_height="40dp" android:text="25" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv26" android:layout_width="40dp" android:layout_height="40dp" android:text="26" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv27" android:layout_width="40dp" android:layout_height="40dp" android:text="27" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="28-30" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv28" android:layout_width="40dp" android:layout_height="40dp" android:text="28" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv29" android:layout_width="40dp" android:layout_height="40dp" android:text="29" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv30" android:layout_width="40dp" android:layout_height="40dp" android:text="30" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="31-33" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv31" android:layout_width="40dp" android:layout_height="40dp" android:text="31" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv32" android:layout_width="40dp" android:layout_height="40dp" android:text="32" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv33" android:layout_width="40dp" android:layout_height="40dp" android:text="33" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:orientation="horizontal">
                <TextView android:layout_width="40dp" android:layout_height="40dp" android:text="34-36" android:gravity="center" android:textSize="14sp" android:textColor="@android:color/black" />
                <GridLayout android:layout_width="wrap_content" android:layout_height="wrap_content" android:columnCount="3">
                    <TextView android:id="@+id/tv34" android:layout_width="40dp" android:layout_height="40dp" android:text="34" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv35" android:layout_width="40dp" android:layout_height="40dp" android:text="35" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                    <TextView android:id="@+id/tv36" android:layout_width="40dp" android:layout_height="40dp" android:text="36" android:textSize="16sp" android:gravity="center" android:background="@drawable/grid_cell_background" android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</ScrollView> 