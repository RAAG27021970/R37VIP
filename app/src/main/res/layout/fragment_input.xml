        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintTop_toBottomOf="@id/betFichasContainer">

        <!-- Accumulated Bet Fichas Column 1 -->
        <TextView
            android:id="@+id/accumulatedBetFichasCol1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="0"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/grid_cell_background"
            android:padding="2dp"/>

        <!-- Accumulated Bet Fichas Column 2 -->
        <TextView
            android:id="@+id/accumulatedBetFichasCol2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="0"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/grid_cell_background"
            android:padding="2dp"/>

        <!-- Accumulated Bet Fichas Column 3 -->
        <TextView
            android:id="@+id/accumulatedBetFichasCol3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="2dp"
            android:text="0"
            android:gravity="center"
            android:textSize="16sp"
            android:background="@drawable/grid_cell_background"
            android:padding="2dp"/>

    </GridLayout>

    <Space
        android:id="@+id/middleSpacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/betFichasContainer"
        app:layout_constraintBottom_toTopOf="@id/numberInput"
        app:layout_constraintVertical_weight="0.3"/>

    <EditText
        android:id="@+id/numberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_enter_number"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColorHint="#666666"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/input_background"
        android:theme="@style/LargeBoldHintStyle"
        app:layout_constraintBottom_toTopOf="@id/numericKeypad"/>

    <GridLayout
        android:id="@+id/numericKeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout> 