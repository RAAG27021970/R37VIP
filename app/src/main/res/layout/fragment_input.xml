<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- First Dashboard Grid for Statistics -->
    <GridLayout
        android:id="@+id/statisticsContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_4"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_3"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_2"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_1"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/statisticsContainer1"/>

    <!-- Second Dashboard Grid for Statistics -->
    <GridLayout
        android:id="@+id/statisticsContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        app:layout_constraintTop_toBottomOf="@id/separator">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_8"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_7"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_6"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="2dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/stat5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/stat_5"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="18sp"/>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <!-- Second Separator Line -->
    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toBottomOf="@id/statisticsContainer2"/>

    <!-- Third Row for Last Numbers -->
    <GridLayout
        android:id="@+id/lastNumbersContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="false"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintTop_toBottomOf="@id/separator2">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/lastNumber1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/lastNumber2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/lastNumber3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="4dp"
            app:cardElevation="1dp"
            android:layout_margin="2dp">

            <TextView
                android:id="@+id/lastNumber4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="-"
                android:gravity="center"
                android:padding="4dp"
                android:textSize="20sp"
                android:textStyle="bold"/>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <Space
        android:id="@+id/middleSpacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statisticsContainer2"
        app:layout_constraintBottom_toTopOf="@id/numberInput"
        app:layout_constraintVertical_weight="1"/>

    <EditText
        android:id="@+id/numberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_enter_number"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"
        app:layout_constraintBottom_toTopOf="@id/numericKeypad"/>

    <!-- Numeric Keypad -->
    <GridLayout
        android:id="@+id/numericKeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Buttons will be added programmatically -->

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 