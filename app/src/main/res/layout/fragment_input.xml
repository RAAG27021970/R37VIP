<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- First Dashboard Grid for Statistics -->
    <GridLayout
        android:id="@+id/statisticsContainer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 1"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 2"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 3"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 4"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <!-- Separator Line -->
    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/statisticsContainer1"/>

    <!-- Second Dashboard Grid for Statistics -->
    <GridLayout
        android:id="@+id/statisticsContainer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:alignmentMode="alignMargins"
        android:useDefaultMargins="true"
        app:layout_constraintTop_toBottomOf="@id/separator">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 5"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 6"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 7"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/stat8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Stat 8"
                android:gravity="center"
                android:padding="16dp"
                android:textSize="16sp"/>
        </com.google.android.material.card.MaterialCardView>

    </GridLayout>

    <Space
        android:id="@+id/middleSpacer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/statisticsContainer2"
        app:layout_constraintBottom_toTopOf="@id/numberInput"
        app:layout_constraintVertical_weight="1"/>

    <EditText
        android:id="@+id/numberInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_enter_number"
        android:inputType="number"
        android:maxLength="2"
        android:textAlignment="center"
        android:textSize="24sp"
        android:padding="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/input_background"
        app:layout_constraintBottom_toTopOf="@id/numericKeypad"/>

    <!-- Numeric Keypad -->
    <GridLayout
        android:id="@+id/numericKeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="3"
        android:rowCount="4"
        android:useDefaultMargins="true"
        android:alignmentMode="alignMargins"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Buttons will be added programmatically -->

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout> 